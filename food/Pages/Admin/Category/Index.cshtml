@page
@using food.Utility
@model food.Pages.Admin.Category.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
@if (User.IsInRole(SD.ManagerRole))
{
    <div class="border backgroundWhite container">
        <div class="row">
            <div class="col-6">
                <h2 class="text-primary">Category List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-page="Upsert" class="btn btn-info"> <i class="fas fa-plus"></i>&nbsp; Create New </a>
            </div>
        </div>
        <br /><br />
        <table id="DT_load" class="table table-striped table-bordered" style="width: 100%">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Display Order</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
}
else
{
    <div>
        <h1 class="text-danger">Access Denied</h1>
    </div>
}
@section Scripts
{
    <script src="~/js/category.js"></script>
}
